<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee" version="3.1"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd">

    <assembly-descriptor>
        <application-exception>
            <exception-class>de.bornemisza.rest.exception.BusinessException</exception-class>
            <rollback>false</rollback>
        </application-exception>
        <application-exception>
            <exception-class>de.bornemisza.rest.exception.DocumentNotFoundException</exception-class>
            <rollback>false</rollback>
        </application-exception>
        <application-exception>
            <exception-class>de.bornemisza.rest.exception.TechnicalException</exception-class>
            <rollback>false</rollback>
        </application-exception>
        <application-exception>
            <exception-class>de.bornemisza.rest.exception.UnauthorizedException</exception-class>
            <rollback>false</rollback>
        </application-exception>
        <application-exception>
            <exception-class>de.bornemisza.rest.exception.UpdateConflictException</exception-class>
            <rollback>false</rollback>
        </application-exception>
    </assembly-descriptor>

</ejb-jar>