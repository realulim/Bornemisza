<?xml version="1.0" encoding="UTF-8"?>
<hazelcast xsi:schemaLocation="http://www.hazelcast.com/schema/config hazelcast-config-3.9.xsd"
           xmlns="http://www.hazelcast.com/schema/config"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<network>
		<interfaces enabled="true">
			<interface>{{ pillar['privip'] }}</interface>
		</interfaces>
		<port auto-increment="false">5701</port>
		<join>
			<multicast enabled="true"></multicast>
		</join>
	</network>

	<queue name="NewUserAccount">
		<max-size>1000</max-size>
		<item-listeners>
			<item-listener include-value="true">de.bornemisza.users.consumer.NewUserAccountListener</item-listener>
		</item-listeners>
	</queue>

	<map name="NewUserAccount">
		<time-to-live-seconds>604800</time-to-live-seconds>
	</map>

</hazelcast>
